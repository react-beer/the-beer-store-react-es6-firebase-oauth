/*! =========================================================================
   2. FOOTER
   ========================================================================= */

.footer
  text-align center
  &.fixed-bottom
    position absolute
    right 0
    bottom 0
    left 0

.love
  position relative
  top 2px
  display inline-block
  font-size 1.3rem
  color #e74c3c
  transform scale(.9)
  animation love .5s infinite linear alternate-reverse

@keyframes love
  to
    transform scale(1.2)
