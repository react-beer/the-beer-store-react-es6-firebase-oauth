html
  position relative
  min-height $height

body
  font-family "Open Sans", sans-serif
  font-size 18px
  font-style normal
  color #29251f
  background $white

.debug
  border 1px solid $black

.fork-ribbon
  position absolute
  z-index 1
  top 0
  right 0
  border 0
  
.msg-error
  margin-top 300px
  margin-bottom 100px
  h1
    font-weight bold
    text-align center
    text-transform uppercase
  p
    text-align center
